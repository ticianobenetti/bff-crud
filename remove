import json

response_data = {}

def application(environ,start_response):

    # Load request body into json
    post_data = json.load(environ['wsgi.input'])

    # Call main function
    do_execute( post_data['name'] )

    # Prepare response
    status = '200 OK'
    response_header = [('Content-type','application/json')]

    # Respond to client
    start_response(status,response_header)
    return [bytes(json.dumps(response_data),'utf-8')]

def do_execute( name ):
    
    data_file = '/var/crud/crud.db'
    
    try:
        fd = open( data_file, 'r' )
        db = json.load( fd )
        fd.close()
        del db[name]
        fd = open( data_file, 'w' )
        json.dump( db, fd )
        fd.close()
        response_data['message'] = 'Record removed successfully.'
        
    except:
        response_data['message'] = 'Could not remove record.'

